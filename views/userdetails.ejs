<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>CRUD app - users</title>
  <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>

<style>
  .card img {
    height: 40vh;
    width: 100%;
    object-fit: cover;
    object-position: center;
  }
</style>

<body>

  <div class="container mt-3 d-flex align-items-center justify-content-between">
    <h1 class="container">All Users.</h1>
    <a style="width: 21vw; gap: .5vw;" class="btn btn-outline-primary d-flex align-items-center" href="/"><i
        class="ri-home-3-line"></i> Go Back to home page.</a>
    <hr>
  </div>


  <div class="container mt-5 mb-5 " style="display: flex; align-items: center; gap: 2vw; flex-wrap: wrap;">
    <% data.reverse().forEach(function(elem){ %>

      <div class="card" style="width: 18rem;">
        <a class="position-absolute p-1 btn btn-light d-flex gap-1 align-items-center" style="top: 2%; right:2%;"
          href="/favourite/<%= elem._id %>">
          <span>
            <%=elem.favourite%>
          </span>
          <i class="ri-heart-fill" style="color: red;"></i>
          Add to favourite</a>

        <img src="<%= elem.dpimage %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title" style="font-size: 1.4vw; text-transform: capitalize;">
            <%= elem.name %>
              <a class="btn btn-warning" href="/edit/<%=elem._id%>"><i class="ri-pencil-fill"></i></a>
              <a class="btn btn-danger" href="/delete/<%= elem._id %>"><i class="ri-delete-bin-line"></i></a>
          </h5>
          <h5 class="card-profession" style="text-transform:capitalize;">
            profession : <%= elem.profession %>
          </h5>
          <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's
            content.</p>
        </div>



        <div class="m-3 " style="gap: 1vw;">

          <form action="/comment/<%= elem._id%>">

            <label for="formGroupExampleInput" class="form-label">Comments</label>
            <div class="flex d-flex align-items-center" style="gap: 1vw;">
              <input type="text" name="comment" class="form-control" id="formGroupExampleInput"
                placeholder="Enter Comment">

              <button type="submit" class="btn btn-success"><i class="ri-chat-1-fill"></i></button>
            </div>

          </form>
          <h6 class="mt-3">Recent Comments</h6>
          <% elem.comments.reverse().forEach(function(cmnt){ %>

            <small class="mt-2 d-flex align-items-center justify-content-between">
              <%=cmnt.comment %>
                <small style="opacity: .5;">
                  <%= cmnt.date %>
                </small>
            </small>

            <% }) %>
        </div>


      </div>

      <% }) %>
    </div>



















  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
    crossorigin="anonymous"></script>
</body>

</html>