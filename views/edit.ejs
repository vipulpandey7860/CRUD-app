<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>

<body>
    <h1 class="container mt-3">Update User Data</h1>

    <div class="container mt-5">

        <% data.forEach(function(elem){ %>

            <form action="/update/<%= elem._id %>">
                <div class="mb-3">
                    <label for="exampleInputName" class="form-label">Your name</label>
                    <input type="text" value="<%=elem.name%>" name="name" class="form-control" id="exampleInputName" aria-describedby="Help">
                    <div id="Help" class="form-text">We'll never share your info with anyone because we have no one.
                    </div>
                </div>
                <div class="mb-3">
                    <label for="exampleInputUsername" class="form-label">Profession</label>
                    <input type="text" value="<%=elem.profession%>"  name="profession" class="form-control" id="exampleInputUsername  ">
                </div>
                <div class="mb-3">
                    <label for="DpImage" class="form-label">DP Image</label>
                    <input type="text" value="<%=elem.dpimage%>"  name="dpimage" class="form-control" id="exampleInputDpImage">
                </div>
                <button type="submit" class="btn btn-primary">Update user</button>
            </form>
            <% }) %>


    </div>









    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>
</body>

</html>